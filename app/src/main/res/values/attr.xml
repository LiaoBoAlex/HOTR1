<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="horizontalSpacing" format="dimension" />
    <attr name="verticalSpacing" format="dimension" />
    <attr name="itemSize" format="dimension" />
    <attr name="itemColor" format="color" />
    <attr name="highlightedItemColor" format="color" />
    <attr name="backgroundResource" format="reference" />
    <attr name="highlightedBackgroundResource" format="reference" />
    <attr name="textPaddingH" format="dimension" />
    <attr name="textPaddingV" format="dimension" />

    <declare-styleable name="FlowLayoutAttrs">
        <attr name="horizontalSpacing" />
        <attr name="verticalSpacing" />
        <attr name="itemSize" />
        <attr name="itemColor" />
        <attr name="backgroundResource" />
        <attr name="highlightedBackgroundResource" />
        <attr name="highlightedItemColor" />
        <attr name="textPaddingH" />
        <attr name="textPaddingV" />
    </declare-styleable>

    <declare-styleable name="ShapedImageView">
        <attr name="shape_mode" format="enum">
            <enum name="round_rect" value="1" />
            <enum name="circle" value="2" />
        </attr>
        <attr name="round_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DragScrollDetailsLayout">
        <attr name="percent" format="float"/>
        <attr name="duration" format="integer"/>
        <attr name="default_panel" format="enum">
            <enum name="front" value="0"/>
            <enum name="behind" value="1"/>
        </attr>
    </declare-styleable>
    <bool name="cpv_default_anim_autostart">false</bool>
    <bool name="cpv_default_is_indeterminate">false</bool>
    <color name="cpv_default_color">#2196F3</color>
    <declare-styleable name="CircularProgressView">
        <attr format="float" name="cpv_progress"/>
        <attr format="float" name="cpv_maxProgress"/>
        <attr format="integer" name="cpv_animDuration"/>
        <attr format="integer" name="cpv_animSwoopDuration"/>
        <attr format="integer" name="cpv_animSyncDuration"/>
        <attr format="color" name="cpv_color"/>
        <attr format="dimension" name="cpv_thickness"/>
        <attr format="boolean" name="cpv_indeterminate"/>
        <attr format="boolean" name="cpv_animAutostart"/>
        <attr format="integer" name="cpv_animSteps"/>
        <attr format="float" name="cpv_startAngle"/>
    </declare-styleable>
    <dimen name="cpv_default_thickness">4dp</dimen>
    <integer name="cpv_default_anim_duration">4000</integer>
    <integer name="cpv_default_anim_steps">3</integer>
    <integer name="cpv_default_anim_swoop_duration">5000</integer>
    <integer name="cpv_default_anim_sync_duration">500</integer>
    <integer name="cpv_default_max_progress">100</integer>
    <integer name="cpv_default_progress">0</integer>
    <integer name="cpv_default_start_angle">-90</integer>
</resources>