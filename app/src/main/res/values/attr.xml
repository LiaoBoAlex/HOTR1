<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="horizontalSpacing" format="dimension" />
    <attr name="verticalSpacing" format="dimension" />
    <attr name="itemSize" format="dimension" />
    <attr name="itemColor" format="color" />
    <attr name="highlightedItemColor" format="color" />
    <attr name="backgroundResource" format="reference" />
    <attr name="highlightedBackgroundResource" format="reference" />
    <attr name="textPaddingH" format="dimension" />
    <attr name="textPaddingV" format="dimension" />

    <declare-styleable name="FlowLayoutAttrs">
        <attr name="horizontalSpacing" />
        <attr name="verticalSpacing" />
        <attr name="itemSize" />
        <attr name="itemColor" />
        <attr name="backgroundResource" />
        <attr name="highlightedBackgroundResource" />
        <attr name="highlightedItemColor" />
        <attr name="textPaddingH" />
        <attr name="textPaddingV" />
    </declare-styleable>

    <declare-styleable name="ShapedImageView">
        <attr name="shape_mode" format="enum">
            <enum name="round_rect" value="1" />
            <enum name="circle" value="2" />
        </attr>
        <attr name="round_radius" format="dimension" />
    </declare-styleable>
</resources>