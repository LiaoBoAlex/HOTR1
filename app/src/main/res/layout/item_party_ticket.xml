<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/ic_plus" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="99"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_add"
        app:layout_constraintRight_toLeftOf="@+id/iv_add" />

    <ImageView
        android:id="@+id/iv_deduct"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_number"
        app:srcCompat="@mipmap/ic_deduct"
        app:layout_constraintRight_toLeftOf="@+id/tv_number"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/iv_ticket"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/holder_ticket"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="14sp"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toRightOf="@+id/iv_ticket"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/text_grey2"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_ticket"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/textView93"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:text="@string/money"
        android:textSize="14sp"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_ticket"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView93"
        app:layout_constraintLeft_toRightOf="@+id/textView93" />

    <TextView
        android:id="@+id/tv_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/text_grey2"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_deduct"
        app:layout_constraintRight_toLeftOf="@+id/iv_deduct"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="-1dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>