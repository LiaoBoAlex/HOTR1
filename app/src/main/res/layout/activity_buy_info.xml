<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/divider2"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_save"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.constraint.ConstraintLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/white"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="14sp"
                    android:hint="@string/must_fill_in"
                    android:textColorHint="@color/text_grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="90dp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="12dp" />
            </android.support.constraint.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider2"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_city"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="90dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="90dp"
                    android:layout_marginRight="12dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/textView68"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/doc_type"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="12dp" />
            </android.support.constraint.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider2"/>
            <android.support.constraint.ConstraintLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <EditText
                    android:id="@+id/et_doc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/white"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:text=""
                    android:hint="@string/must_fill_in"
                    android:textColorHint="@color/text_grey"
                    android:textColor="@color/text_black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="90dp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/textView60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doc_number"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="12dp" />
            </android.support.constraint.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider2"/>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_doc_date"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_doc_date"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:text="@string/must_fill_in"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="90dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="90dp"
                    android:layout_marginRight="12dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/doc_date"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="12dp" />
            </android.support.constraint.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider2"/>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/gender1"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:id="@+id/ll_male"
                    android:layout_marginLeft="90dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="40dp">

                    <ImageView
                        android:id="@+id/iv_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_address_clicked" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/male"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"
                        android:layout_marginLeft="6dp"
                        android:gravity="center_vertical"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_female"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/ll_male">

                    <ImageView
                        android:id="@+id/iv_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_address_click" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/female"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"
                        android:layout_marginLeft="6dp"
                        android:gravity="center_vertical"/>

                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider2"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="49dp">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/white"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/text_black"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textColorHint="@color/text_grey"
                    android:textSize="14sp"
                    android:hint="@string/must_fill_in"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="90dp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="12dp" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>