<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textView34"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/gender"
            android:textColor="@color/text_grey2"
            android:textSize="14sp"/>
        <TextView
            android:layout_toRightOf="@+id/textView34"
            android:id="@+id/tv_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/text_black"
            android:textSize="14sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView35"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/work_time1"
            android:textColor="@color/text_grey2"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:layout_toRightOf="@+id/textView35"
            android:id="@+id/tv_worktime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/text_black"
            android:textSize="14sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView37"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/title_height2"
            android:textColor="@color/text_grey2"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:layout_toRightOf="@+id/textView37"
            android:id="@+id/tv_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/text_black"
            android:textSize="14sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView36"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/specialize1"
            android:textColor="@color/text_grey2"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:layout_toRightOf="@+id/textView36"
            android:id="@+id/tv_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/text_black"
            android:textSize="14sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/textView44"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/intro"
            android:textColor="@color/text_grey2"
            android:textSize="14sp"/>
        <TextView
            android:layout_toRightOf="@+id/textView44"
            android:id="@+id/tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:textColor="@color/text_black"
            android:textSize="14sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divider2"/>
</LinearLayout>