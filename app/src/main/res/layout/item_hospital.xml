<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.us.hotr.customview.ShapedImageView
        android:scaleType="centerCrop"
        app:shape_mode="circle"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:src="@mipmap/image_holder_1"
        android:id="@+id/img_avator"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline10"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintDimensionRatio="h,1:1" />

    <TextView
        android:id="@+id/tv_name"
        android:textSize="14sp"
        android:textColor="@color/text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline10" />

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="12sp"
        android:textColor="@color/text_grey2"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textSize="12sp"
        android:textColor="@color/text_grey2"
        app:layout_constraintTop_toBottomOf="@+id/tv_title1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title1" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_certified"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tv_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="11sp"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title2"
        app:layout_constraintTop_toBottomOf="@+id/tv_title2" />

    <TextView
        android:id="@+id/tv_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textSize="11sp"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toRightOf="@+id/tv_appointment"
        app:layout_constraintTop_toTopOf="@+id/tv_appointment"
        android:layout_marginStart="8dp" />

    <com.us.hotr.customview.FlowLayout
        android:id="@+id/fl_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="13dp"
        app:backgroundResource="@drawable/bg_search"
        app:itemColor="@color/text_black"
        app:itemSize="11sp"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintLeft_toLeftOf="@+id/tv_appointment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_appointment"
        android:layout_marginEnd="12dp" />
    <View
        android:id="@+id/v_divider"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:background="@color/divider2"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/fl_subject"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline10"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

</android.support.constraint.ConstraintLayout>