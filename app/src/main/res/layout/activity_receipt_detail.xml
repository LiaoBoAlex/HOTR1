<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/divider2"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:paddingLeft="12dp"
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:drawableLeft="@mipmap/ic_back"
                android:drawablePadding="6dp"
                android:text="@string/back"
                android:textColor="@color/text_black"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/divider2" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/tv_marchent"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:text="TextView"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_id"
                android:layout_marginLeft="18dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="18dp" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:text="TextView"
                android:textSize="11sp"
                android:textColor="@color/text_grey2"
                android:gravity="center_vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="18dp"
                android:layout_marginEnd="18dp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="12dp"
                android:layout_height="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_marchent"
                app:srcCompat="@mipmap/ic_receipt_left" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="12dp"
                android:layout_height="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_marchent"
                app:srcCompat="@mipmap/ic_receipt_right" />

            <View
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:background="@drawable/dash_line"
                android:layerType="software"
                app:layout_constraintLeft_toRightOf="@+id/imageView7"
                app:layout_constraintRight_toLeftOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/tv_marchent"
                android:id="@+id/view29" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp"
                android:textColor="@color/text_grey2"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/view29"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="12dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="30sp"
                android:textColor="@color/text_black"
                android:gravity="center_horizontal"
                android:layout_marginRight="12dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="-2dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:gravity="center_horizontal"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_amount"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="12dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintHorizontal_bias="0.0" />

            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_code"
                app:srcCompat="@drawable/placeholder_post3" />

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_map"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_code" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:text="@string/hint_make_appointment"
                android:textSize="11sp"
                android:textColor="@color/text_grey2"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/dash_line"
                android:layerType="software"
                app:layout_constraintBottom_toTopOf="@+id/textView42"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/view30" />

            <TextView
                android:id="@+id/tv_map"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginBottom="36dp"
                android:text="@string/check_map"
                android:background="@color/text_black"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/view30"
                android:layout_marginRight="31dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="31dp"
                app:layout_constraintLeft_toLeftOf="parent" />

        </android.support.constraint.ConstraintLayout>
        <com.us.hotr.customview.LoadingView
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</LinearLayout>