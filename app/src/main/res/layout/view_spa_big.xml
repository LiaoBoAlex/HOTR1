<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_delete"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_delete_order"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_spa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/view12"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/divider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_query"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_green"
            android:gravity="center"
            android:text="@string/online_query"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view12" />

        <TextView
            android:id="@+id/tv_hospital3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_grey2"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_hospital2"
            app:layout_constraintTop_toBottomOf="@+id/tv_hospital2" />

        <TextView
            android:id="@+id/tv_hospital2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_grey2"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_hospital3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_hospital1"
            app:layout_constraintTop_toBottomOf="@+id/tv_hospital1" />

        <TextView
            android:id="@+id/tv_hospital1"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="21dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_hospital2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_hospital_avatar"
            app:layout_constraintTop_toBottomOf="@+id/view12" />

        <com.us.hotr.customview.ShapedImageView
            android:id="@+id/iv_hospital_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_post_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view12"
            app:shape_mode="circle" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>