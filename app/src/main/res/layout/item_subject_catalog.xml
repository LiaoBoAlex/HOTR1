<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="18dp"
    android:paddingRight="12dp">
    <TextView
        android:id="@+id/tv_title"
        android:text="abc"
        android:paddingTop="16dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_black"/>
    <com.us.hotr.customview.FlowLayout
        android:id="@+id/fl_subtitle"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:highlightedBackgroundResource="@drawable/bg_button_red"
        app:highlightedItemColor="@color/white"
        app:backgroundResource="@drawable/bg_button_dash"
        app:itemColor="@color/text_black"
        app:itemSize="12sp"
        app:textPaddingV="12dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider2"/>

</LinearLayout>