<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/textView86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mins"
            android:textColor="@color/red"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_pay_amount"
            android:layout_marginLeft="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_pay_amount"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="12dp"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_appointment"
            app:layout_constraintRight_toRightOf="parent" />

        <com.us.hotr.customview.ImageBanner
            android:id="@+id/banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="-1dp"
            app:bb_scale="0.96"
            app:layout_constraintDimensionRatio="h,1:0.96"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:text="@string/money"
            android:textColor="@color/red"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_pay_amount"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="19dp"
            android:text="TextView"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/textView79"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_price_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@+id/textView86"
            android:layout_marginLeft="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView86"
            android:layout_marginBottom="0dp" />

        <ImageView
            android:id="@+id/iv_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price_before"
            app:layout_constraintLeft_toRightOf="@+id/tv_price_before"
            app:srcCompat="@mipmap/list_icon_cxj" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:maxLines="2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner" />

        <TextView
            android:id="@+id/tv_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pay_amount" />
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divider2"/>
    <TextView
        android:id="@+id/tv_masseur_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:paddingLeft="12dp"
        android:textSize="14dp"
        android:textColor="@color/text_black"
        android:text="@string/choose_masseur"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider2"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divider2"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_spa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_query"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_green"
            android:gravity="center"
            android:text="@string/online_query"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_hospital3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_hospital2"
            app:layout_constraintTop_toBottomOf="@+id/tv_hospital2" />

        <TextView
            android:id="@+id/tv_hospital2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_hospital1"
            app:layout_constraintTop_toBottomOf="@+id/tv_hospital1" />

        <TextView
            android:id="@+id/tv_hospital1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="21dp"
            android:text="TextView"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_hospital_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <com.us.hotr.customview.ShapedImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_hospital_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            app:shape_mode="circle"
            android:src="@drawable/placeholder_post_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_divider"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/divider2"
        android:gravity="center"
        android:text="下拉看更多"
        android:textColor="@color/text_black" />
</LinearLayout>