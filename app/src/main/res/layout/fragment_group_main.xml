<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/divider2"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:background="@color/divider2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_all_group"
                    android:background="@color/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/ic_arror_more"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="6dp"
                        android:text="@string/all_group"
                        android:textColor="@color/text_grey2"
                        android:textSize="14sp"
                        app:layout_constraintRight_toLeftOf="@+id/imageView38"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:text="@string/my_group"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_no_group"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="159dp">

                    <TextView
                        android:id="@+id/tv_all_group"
                        android:layout_width="107dp"
                        android:layout_height="27dp"
                        android:text="@string/check_all_group"
                        android:background="@drawable/bg_round_button_dark"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginLeft="12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginRight="12dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="21dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView114" />

                    <TextView
                        android:id="@+id/textView114"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_grey2"
                        android:text="@string/you_have_no_group"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView36"
                        android:layout_marginLeft="12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginRight="12dp"
                        app:layout_constraintRight_toRightOf="parent" />

                    <ImageView
                        android:id="@+id/imageView36"
                        android:layout_width="85dp"
                        android:layout_height="56dp"
                        app:srcCompat="@mipmap/ic_no_post"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginRight="12dp"
                        app:layout_constraintRight_toRightOf="parent" />
                </android.support.constraint.ConstraintLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_my_group"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_recommended_group"
                    android:background="@color/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView35"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/ic_arror_more"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="6dp"
                        android:text="@string/more"
                        android:visibility="gone"
                        android:textColor="@color/text_grey2"
                        android:textSize="14sp"
                        app:layout_constraintRight_toLeftOf="@+id/imageView35"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintVertical_bias="0.538" />

                    <TextView
                        android:id="@+id/textView112"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:text="@string/recommended_group"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_recommended_group"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <com.us.hotr.customview.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>