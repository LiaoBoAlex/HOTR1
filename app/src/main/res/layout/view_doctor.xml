<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_delete"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_delete_order"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.us.hotr.customview.ShapedImageView
                android:id="@+id/img_avator"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitStart"
                android:src="@drawable/placeholder_post3"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline10"
                app:layout_constraintTop_toTopOf="parent"
                app:shape_mode="circle" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textColor="@color/text_black"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/imageView11"
                app:layout_constraintLeft_toLeftOf="@+id/guideline10"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="3dp"
                android:text="TextView"
                android:textColor="@color/text_grey2"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="3dp"
                android:text="TextView"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_grey2"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/tv_title1"
                app:layout_constraintTop_toBottomOf="@+id/tv_title1" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="30dp"
                android:layout_height="18dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="18dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_certified" />

            <TextView
                android:id="@+id/tv_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="TextView"
                android:textColor="@color/text_black"
                android:textSize="11sp"
                android:paddingBottom="13dp"
                app:layout_constraintLeft_toLeftOf="@+id/tv_title2"
                app:layout_constraintTop_toBottomOf="@+id/tv_title2" />

            <TextView
                android:id="@+id/tv_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textColor="@color/text_black"
                android:textSize="11sp"
                app:layout_constraintLeft_toRightOf="@+id/tv_appointment"
                app:layout_constraintTop_toTopOf="@+id/tv_appointment" />

            <com.us.hotr.customview.FlowLayout
                android:id="@+id/fl_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="12dp"
                app:backgroundResource="@drawable/bg_search"
                app:itemColor="@color/text_black"
                app:itemSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.636"
                app:layout_constraintLeft_toLeftOf="@+id/tv_appointment"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_appointment" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.22" />

        </android.support.constraint.ConstraintLayout>
        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/divider2"/>
    </LinearLayout>
</LinearLayout>