<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/divider2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_pay"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_remain_total2" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/view22"
        android:layout_marginBottom="0dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="118dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/constraintLayout2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <com.us.hotr.customview.ShapedImageView
            android:scaleType="centerCrop"
            app:shape_mode="circle"
            android:id="@+id/iv_product_avatar"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/placeholder_post_2"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_product_avatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="14dp" />

        <TextView
            android:id="@+id/tv_product_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/red"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_money"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp" />

        <TextView
            android:id="@+id/tv_price_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deposit"
            android:textColor="@color/text_grey2"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_product_doctor"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_pay_amount" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money"
            android:textColor="@color/red"
            android:textSize="11sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_price_before"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price_before" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@mipmap/ic_plus"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:text="99"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/iv_add"
            app:layout_constraintRight_toLeftOf="@+id/iv_add" />

        <ImageView
            android:id="@+id/iv_deduct"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_number"
            app:layout_constraintRight_toLeftOf="@+id/tv_number"
            app:srcCompat="@mipmap/ic_deduct" />
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        android:id="@+id/view18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:text="@string/voucher"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view18" />

    <TextView
        android:id="@+id/tv_voucher"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textColor="@color/text_grey2"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintRight_toLeftOf="@+id/imageView30"
        android:layout_marginRight="6dp" />
    <View
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:background="@color/divider2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_voucher"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view19" />

    <TextView
        android:id="@+id/tv_deposit_total"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:text="textview"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view19" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider2"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_deposit_total"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/view20" />

    <TextView
        android:id="@+id/tv_remain_total"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:text="TextView"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view20"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view22" />

    <TextView
        android:id="@+id/tv_remain_total2"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="0dp"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textColor="@color/text_grey2"
        android:text="@string/remaining_total2"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_remain_total"
        app:layout_constraintLeft_toRightOf="@+id/tv_remain_total" />

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="250dp"
        android:layout_height="49dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/text_black"
        android:gravity="center"
        android:text="@string/confirm_order_title"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/view22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="@string/need_to_pay"
        android:textSize="12sp"
        android:textColor="@color/text_grey2"
        app:layout_constraintLeft_toLeftOf="@+id/tv_amount"
        app:layout_constraintTop_toBottomOf="@+id/tv_amount" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="@mipmap/ic_arror_more"
        app:layout_constraintBottom_toBottomOf="@+id/tv_voucher"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>