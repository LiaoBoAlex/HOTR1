<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_price_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_pay_amount"
            app:layout_constraintLeft_toRightOf="@+id/tv_pay_amount" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginStart="12dp"
            android:text="TextView\nTextView"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/banner" />

        <TextView
            android:id="@+id/tv_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pay_amount" />
        <ImageView
            android:id="@+id/iv_one_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price_before"
            app:layout_constraintLeft_toRightOf="@+id/tv_price_before"
            app:srcCompat="@mipmap/list_icon_ikj" />

        <ImageView
            android:id="@+id/iv_promo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price_before"
            app:layout_constraintStart_toEndOf="@+id/iv_one_price"
            app:srcCompat="@mipmap/list_icon_cxj" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:text="@string/money"
            android:textColor="@color/red"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_pay_amount"
            app:layout_constraintLeft_toLeftOf="parent" />


        <com.us.hotr.customview.ImageBanner
            android:id="@+id/banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="-1dp"
            app:bb_scale="0.96"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="h,1:0.96" />
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider2"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_promise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_promise4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@+id/ll_promise3"
            app:layout_constraintTop_toTopOf="@+id/ll_promise3">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                app:srcCompat="@mipmap/ic_warranty" />

            <TextView
                android:id="@+id/tv_promise4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/text_grey2"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_promise1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                app:srcCompat="@mipmap/ic_warranty" />

            <TextView
                android:id="@+id/tv_promise1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/text_grey2"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_promise2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@+id/ll_promise1"
            app:layout_constraintTop_toTopOf="@+id/ll_promise1">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                app:srcCompat="@mipmap/ic_warranty" />

            <TextView
                android:id="@+id/tv_promise2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/text_grey2"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_promise3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@+id/ll_promise2"
            app:layout_constraintTop_toTopOf="@+id/ll_promise2">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                app:srcCompat="@mipmap/ic_warranty" />

            <TextView
                android:id="@+id/tv_promise3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/text_grey2"
                android:textSize="11dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_arror_more" />
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divider2"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_hospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_query"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_green"
            android:gravity="center"
            android:text="@string/online_query"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_hospital3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_hospital2"
            app:layout_constraintTop_toBottomOf="@+id/tv_hospital2" />

        <TextView
            android:id="@+id/tv_hospital2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_hospital1"
            app:layout_constraintTop_toBottomOf="@+id/tv_hospital1" />

        <TextView
            android:id="@+id/tv_hospital1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="21dp"
            android:text="TextView"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_hospital_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <com.us.hotr.customview.ShapedImageView
            android:id="@+id/iv_hospital_avatar"
            android:layout_width="50dp"
            android:layout_height="54dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_post_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_mode="circle" />

        <ImageView
            android:id="@+id/iv_certified"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:layout_marginTop="43dp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_hospital_avatar"
            app:layout_constraintRight_toRightOf="@+id/iv_hospital_avatar"
            app:layout_constraintTop_toTopOf="@+id/iv_hospital_avatar"
            app:srcCompat="@mipmap/ic_certified" />
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider2" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="TextView"
            android:textColor="@color/text_grey2"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_doctor_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_doctor_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_arror_more" />
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/tv_divider"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/divider2"
        android:gravity="center"
        android:text="下拉看更多"
        android:textColor="@color/text_black"/>
</LinearLayout>