<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_3"
        android:layout_width="109dp"
        android:layout_height="138dp"
        app:srcCompat="@drawable/placeholder_ad3"
        app:layout_constraintRight_toLeftOf="@+id/img_2"
        app:layout_constraintLeft_toRightOf="@+id/img_1"
        app:layout_constraintTop_toTopOf="@+id/img_1"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="109dp"
        android:layout_height="138dp"
        app:srcCompat="@drawable/placeholder_ad3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_3"
        app:layout_constraintTop_toTopOf="@+id/img_3"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="109dp"
        android:layout_height="138dp"
        app:srcCompat="@drawable/placeholder_ad3"
        app:layout_constraintRight_toLeftOf="@+id/img_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />
</android.support.constraint.ConstraintLayout>