<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="102dp">

    <com.us.hotr.customview.ShapedImageView
        app:round_radius="2dp"
        android:scaleType="centerCrop"
        app:shape_mode="round_rect"
        android:id="@+id/iv_avatar"
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:src="@drawable/placeholder_post3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="@color/text_grey2"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_add"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="TextView"
        android:visibility="gone"
        android:textSize="13sp"
        android:textColor="@color/cyan"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_number1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="12sp"
        android:textColor="@color/text_grey2"
        app:layout_constraintLeft_toRightOf="@+id/tv_title"
        android:layout_marginLeft="6dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_title"
        android:layout_marginStart="6dp" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_group_add"
        android:layout_marginEnd="15dp" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_desc" />

    <TextView
        android:id="@+id/tv_recommanded"
        android:layout_width="22dp"
        android:layout_height="12dp"
        android:background="@drawable/bg_button_green_corner"
        android:gravity="center"
        android:text="@string/recommended"
        android:textColor="@color/white"
        android:textSize="9sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />
</android.support.constraint.ConstraintLayout>